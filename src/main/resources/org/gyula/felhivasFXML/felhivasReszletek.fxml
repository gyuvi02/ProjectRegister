<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" stylesheets="@../foablak.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.felhivasController.felhivasReszletekController">


    <HBox maxWidth="-Infinity" prefHeight="100.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </HBox>
    <TextArea fx:id="reszletek" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="668.0" prefWidth="883.0" stylesheets="@../foablak.css" wrapText="true">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
        </VBox.margin>
    </TextArea>
    <BorderPane maxHeight="-Infinity" prefHeight="120.0" prefWidth="900.0">
        <bottom>
            <Button fx:id="kilepesGomb" alignment="CENTER_RIGHT" contentDisplay="TOP" mnemonicParsing="false" onAction="#kilep" text="Bezár" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="20.0" top="10.0" />
                </BorderPane.margin>
            </Button>
        </bottom>
        <center>
        <Hyperlink fx:id="hyperlink" onAction="#felhivasLink" textAlignment="CENTER" BorderPane.alignment="CENTER" />
        </center>
        <top>
        <Label fx:id="pafiLink" text="A pályázat oldala a pafi.hu-n:" BorderPane.alignment="CENTER" />
        </top>
    </BorderPane>
</VBox>
